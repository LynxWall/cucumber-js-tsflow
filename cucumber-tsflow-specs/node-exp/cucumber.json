{
	"esnode": {
		"transpiler": "es-node",
		"paths": ["../features/**/*.feature"],
		"require": ["./src/step_definitions/**/*.ts"],
		"format": [
			"behave:../reports/esnode-exp.json",
			"html:../reports/esnode-exp.html",
			"junitbamboo:../reports/esnode-exp.xml"
		],
		"parallel": 2,
		"experimentalDecorators": true,
		"tags": "@node-exp"
	},
	"tsnode": {
		"transpiler": "ts-node",
		"paths": ["../features/**/*.feature"],
		"require": ["./src/step_definitions/**/*.ts"],
		"format": [
			"behave:../reports/tsnode-exp.json",
			"html:../reports/tsnode-exp.html",
			"junitbamboo:../reports/tsnode-exp.xml"
		],
		"parallel": 1,
		"experimentalDecorators": true,
		"tags": "@node-exp"
	},
	"ts-node-esm": {
		"paths": ["../features/**/*.feature"],
		"import": ["./src/step_definitions/**/*.ts"],
		"loader": ["ts-node/esm"],
		"format": [
			"behave:../reports/tsnodeesm.json",
			"html:../reports/tsnodeesm.html",
			"junitbamboo:../reports/tsnodeesm.xml"
		],
		"parallel": 1,
		"experimentalDecorators": true,
		"tags": "@node-exp"
	},
	"es-node-esm": {
		"transpiler": "es-node-esm",
		"paths": ["../features/**/*.feature"],
		"import": ["./src/step_definitions/**/*.ts"],
		"format": [
			"behave:../reports/tsnode-exp.json",
			"html:../reports/tsnode-exp.html",
			"junitbamboo:../reports/tsnode-exp.xml"
		],
		"parallel": 0,
		"experimentalDecorators": true,
		"tags": "@node-exp"
	}
}
