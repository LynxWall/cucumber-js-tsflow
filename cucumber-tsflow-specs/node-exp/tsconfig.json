{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "nodeNext",
		"target": "es2022",
		"strict": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"lib": ["es2022"],
		"typeRoots": ["../../node_modules/@types"],
		"paths": {
			"@fixtures/*": ["./src/fixtures/*"]
		}
	},
	"include": ["./src/**/*.ts", "./src/**/*.vue"]
}
