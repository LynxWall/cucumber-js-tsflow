{
	"esnode": {
		"transpiler": "esnode",
		"paths": ["../features/**/*.feature"],
		"require": ["./src/step_definitions/**/*.ts"],
		"format": ["behave:cucumber_report.json", "html:cucumber_report.html"],
		"parallel": 2,
		"tags": "@node",
		"publishQuiet": true
	},
	"tsnode": {
		"transpiler": "tsnode",
		"paths": ["../features/**/*.feature"],
		"require": ["./src/step_definitions/**/*.ts"],
		"format": ["behave:cucumber_report.json", "html:cucumber_report.html"],
		"parallel": 2,
		"tags": "@node",
		"publishQuiet": true
	}
}
