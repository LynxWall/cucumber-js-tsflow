{
	"esnode": {
		"transpiler": "esnode",
		"paths": ["../features/**/*.feature"],
		"require": ["./src/step_definitions/**/*.ts"],
		"format": ["behave:../reports/esnode.json", "html:../reports/esnode.html", "junitbamboo:../reports/esnode.xml"],
		"parallel": 0,
		"tags": "@node"
	},
	"tsnode": {
		"transpiler": "tsnode",
		"paths": ["../features/**/*.feature"],
		"require": ["./src/step_definitions/**/*.ts"],
		"format": ["behave:../reports/tsnode.json", "html:../reports/tsnode.html", "junitbamboo:../reports/tsnode.xml"],
		"parallel": 1,
		"tags": "@node"
	}
}
