{
	"esnode": {
		"transpiler": "esnode",
		"paths": ["../features/**/*.feature"],
		"require": ["./src/step_definitions/**/*.ts"],
		"format": [
			"behave:../cucumber_report_esnode.json",
			"html:../cucumber_report_esnode.html",
			"junitbamboo:../cucumber_report_esnode.xml"
		],
		"parallel": 2,
		"tags": "@node"
	},
	"tsnode": {
		"transpiler": "tsnode",
		"paths": ["../features/**/*.feature"],
		"require": ["./src/step_definitions/**/*.ts"],
		"format": [
			"behave:../cucumber_report_tsnode.json",
			"html:../cucumber_report_tsnode.html",
			"junitbamboo:../cucumber_report_tsnode.xml"
		],
		"parallel": 1,
		"tags": "@node"
	}
}
