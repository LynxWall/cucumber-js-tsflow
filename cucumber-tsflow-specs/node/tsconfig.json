{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "nodeNext",
		"target": "es2022",
		"strict": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"lib": ["es2022", "esnext.decorators"],
		"typeRoots": ["../../node_modules/@types"]
	},
	"include": ["./src/**/*.ts", "./src/**/*.vue"]
}
