{
	"name": "@lynxwall/cucumber-tsflow",
	"description": "Provides 'specflow' like bindings for CucumberJS 11.2.0 in TypeScript 5.8+.",
	"version": "7.1.2",
	"author": "Lonnie Wall <lynxdev@lynxwall.com>",
	"license": "MIT",
	"keywords": [
		"testing",
		"bdd",
		"cucumber",
		"cucumberJS",
		"gherkin",
		"tests",
		"typescript",
		"specflow",
		"tsflow",
		"vue3"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lynxwall/cucumber-js-tsflow.git"
	},
	"directories": {
		"lib": "./lib"
	},
	"main": "./lib/index.js",
	"exports": {
		".": {
			"import": "./lib/wrapper.mjs",
			"require": "./lib/index.js",
			"types": "./lib/index.d.ts"
		},
		"./api": {
			"import": "./lib/api/wrapper.mjs",
			"require": "./lib/api/index.js",
			"types": "./lib/api/index.d.ts"
		},
		"./lib/*": {
			"require": "./lib/*.js"
		},
		"./behave": "./lib/behave.js",
		"./esnode": "./lib/esnode.js",
		"./esvue": "./lib/esvue.js",
		"./junitbamboo": "./lib/junitbamboo.js",
		"./snippet": "./lib/snippet.js",
		"./tsnode": "./lib/tsnode.js",
		"./tsvue": "./lib/tsvue.js",
		"./package.json": "./package.json"
	},
	"types": "./lib/index.d.ts",
	"dependencies": {
		"@cucumber/cucumber": "~11.2.0",
		"@jeanbenitez/logical-expression-parser": "~1.0.0",
		"@types/node": "~22.13.10",
		"ansis": "~3.17.0",
		"commander": "^13.1.0",
		"debug": "^4.3.4",
		"esbuild": "~0.25.1",
		"glob": "~11.0.1",
		"hash-sum": "~2.0.0",
		"import-sync": "^2.2.2",
		"jsdom": "~26.0.0",
		"jsdom-global": "~3.0.2",
		"lodash.merge": "~4.6.2",
		"polyfill-symbol-metadata": "^0.0.2",
		"require-extension-hooks": "~0.3.3",
		"rollup": "~4.35.0",
		"short-uuid": "~5.2.0",
		"source-map-support": "~0.5.21",
		"ts-node": "~10.9.2",
		"tsconfig-paths": "~4.2.0",
		"tslib": "2.8.1",
		"typescript": "~5.8.2",
		"underscore": "~1.13.7"
	},
	"devDependencies": {
		"@rollup/pluginutils": "~5.1.4",
		"@types/debug": "~4.1.12",
		"@types/glob": "~8.1.0",
		"@types/hash-sum": "~1.0.2",
		"@types/lodash.merge": "~4.6.9",
		"@types/source-map-support": "~0.5.10",
		"@types/underscore": "~1.13.0",
		"genversion": "~3.2.0",
		"shx": "0.3.4"
	},
	"scripts": {
		"build": "genversion --es6 src/version.ts && tsc --build tsconfig.node.json  && shx cp src/wrapper.mjs lib/ && shx cp src/api/wrapper.mjs lib/api/",
		"build:watch": "tsc --build tsconfig.node.json --watch"
	},
	"bin": {
		"cucumber-tsflow": "bin/cucumber-tsflow.js"
	},
	"files": [
		"api/",
		"bin/",
		"lib/"
	]
}
