{
	"compilerOptions": {
		"esModuleInterop": true,
		"lib": ["es2022", "esnext.decorators"],
		"module": "node18",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"inlineSources": true,
		"skipLibCheck": true,
		"target": "es2022",
		"typeRoots": ["../node_modules/@types", "./src/types"]
	}
}
