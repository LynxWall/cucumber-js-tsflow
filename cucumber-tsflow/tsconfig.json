{
	"compilerOptions": {
		"composite": true,
		"module": "umd",
		"moduleResolution": "node",
		"target": "es6",
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["./src/**/*.ts", "src/plugins/cucumber-ts-vue.cjs"]
}
