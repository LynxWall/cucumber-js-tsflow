{
	"private": true,
	"name": "@lynxwall/cucumber-tsflow-workspace",
	"description": "Workspace for cucumber-tsflow",
	"author": "Lonnie Wall <lynxdev@lynxwall.com>",
	"version": "4.1.0",
	"license": "MIT",
	"workspaces": [
		"cucumber-tsflow",
		"cucumber-tsflow-specs"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/lynxwall/cucumber-js-tsflow.git"
	},
	"scripts": {
		"build": "tsc --build",
		"build:watch": "tsc --build --watch",
		"format": "prettier --write \"{cucumber-tsflow/src,cucumber-tsflow-specs/src}/**/*.{js,ts}\"",
		"lint": "eslint --fix --ext .js,.ts,.vue --ignore-path .eslintignore cucumber-tsflow/src",
		"pretest": "npm run build",
		"test": "cucumber-js -p default",
		"set-packageversion": "node .build/setPackageVersion.js"
	},
	"devDependencies": {
		"@cucumber/cucumber": "^7.3.2",
		"@cucumber/messages": "^16.0.1",
		"@types/chai": "^4.3.0",
		"@types/node": "17.0.21",
		"@types/underscore": "1.11.4",
		"@typescript-eslint/eslint-plugin": "^5.15.0",
		"@typescript-eslint/parser": "^5.15.0",
		"@vue/eslint-config-typescript": "^10.0.0",
		"chai": "^4.3.6",
		"depcheck": "^1.4.3",
		"eslint": "^8.11.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-vue": "^8.5.0",
		"husky": "^7.0.4",
		"log4js": "^6.4.3",
		"nerdbank-gitversioning": "^3.5.86-alpha",
		"prettier": "^2.6.0",
		"ts-node": "^10.7.0",
		"tsconfig-paths": "^3.14.0",
		"tsup": "^5.12.1",
		"typescript": "~4.6.2"
	}
}
