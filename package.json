{
  "private": true,
  "name": "cucumber-tsflow-workspace",
  "description": "Workspace for cucumber-tsflow",
  "version": "2.0.0",
  "license": "MIT",
  "workspaces": [
    "cucumber-tsflow",
    "cucumber-tsflow-specs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/timjroberts/cucumber-js-tsflow.git"
  },
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "postinstall": "lerna bootstrap",
    "precommit": "lint-staged && npm test",
    "pretest": "npm run build",
    "test": "cucumber-js --require cucumber-tsflow-specs/dist cucumber-tsflow-specs",
    "set-packageversion": "node .build/setPackageVersion.js"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@cucumber/messages": "^17.1.1",
    "@types/node": "17.0.21",
    "@types/underscore": "1.11.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.5",
    "log4js": "^6.4.2",
    "nerdbank-gitversioning": "^3.5.85-alpha",
    "prettier": "^2.5.1",
    "ts-node": "^10.6.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.2"
  }
}
