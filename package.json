{
	"private": true,
	"name": "@lynxwall/cucumber-tsflow-workspace",
	"description": "Workspace for cucumber-tsflow",
	"author": "Lonnie Wall <lynxdev@lynxwall.com>",
	"version": "7.2.0",
	"license": "MIT",
	"workspaces": [
		"cucumber-tsflow",
		"cucumber-tsflow-specs/node",
		"cucumber-tsflow-specs/node-esm",
		"cucumber-tsflow-specs/node-exp",
		"cucumber-tsflow-specs/vue",
		"cucumber-tsflow-specs/vue-esm",
		"cucumber-tsflow-specs/vue-exp"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/lynxwall/cucumber-js-tsflow.git"
	},
	"scripts": {
		"// Build Commands": "",
		"build": "yarn workspace @lynxwall/cucumber-tsflow build",
		"build:watch": "yarn workspace @lynxwall/cucumber-tsflow build:watch",
		"// Code Quality": "",
		"format": "prettier --write \"{cucumber-tsflow/src,cucumber-tsflow-specs/src}/**/*.{js,ts}\"",
		"lint": "eslint --fix --ext .js,.ts,.vue cucumber-tsflow/src",
		"// Test All": "",
		"test:all": "yarn test:cjs && yarn test:esm && yarn test:experimental",
		"// CommonJS Tests": "",
		"test:cjs": "yarn test:cjs:vue && yarn test:cjs:node",
		"test:cjs:vue": "yarn test:vue:es && yarn test:vue:ts",
		"test:cjs:node": "yarn test:node:es && yarn test:node:ts",
		"// ESM Tests": "",
		"test:esm": "yarn test:esm:vue && yarn test:esm:node",
		"test:esm:vue": "yarn test:vue-esm:ts",
		"test:esm:node": "yarn test:node-esm:ts && yarn test:node-esm:es",
		"// Experimental Decorator Tests": "",
		"test:experimental": "yarn test:exp:vue && yarn test:exp:node",
		"test:exp:vue": "yarn test:vue-exp:es && yarn test:vue-exp:ts",
		"test:exp:node": "yarn test:node-exp:es && yarn test:node-exp:ts",
		"// Individual Test Commands": "",
		"test:vue:es": "yarn workspace cucumber-tsflow-vue test:es",
		"test:vue:ts": "yarn workspace cucumber-tsflow-vue test:ts",
		"test:vue-esm:ts": "yarn workspace cucumber-tsflow-vue-esm test:tsvue-esm",
		"test:node:es": "yarn workspace cucumber-tsflow-node test:es",
		"test:node:ts": "yarn workspace cucumber-tsflow-node test:ts",
		"test:node-esm:ts": "yarn workspace cucumber-tsflow-node-esm test:tsnode-esm",
		"test:node-esm:es": "yarn workspace cucumber-tsflow-node-esm test:esnode-esm",
		"test:vue-exp:es": "yarn workspace cucumber-tsflow-vue-exp test:es",
		"test:vue-exp:ts": "yarn workspace cucumber-tsflow-vue-exp test:ts",
		"test:node-exp:es": "yarn workspace cucumber-tsflow-node-exp test:es",
		"test:node-exp:ts": "yarn workspace cucumber-tsflow-node-exp test:ts"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.23.0",
		"@jsdevtools/npm-publish": "~3.1.1",
		"@types/node": "~22.13.10",
		"@vue/eslint-config-typescript": "~14.5.0",
		"eslint": "~9.22.0",
		"eslint-config-prettier": "~10.1.1",
		"eslint-plugin-vue": "~10.0.0",
		"prettier": "~3.5.3",
		"ts-node": "~10.9.2",
		"typescript": "~5.8.2",
		"vue-eslint-parser": "10.1.1"
	},
	"packageManager": "yarn@3.5.0"
}
