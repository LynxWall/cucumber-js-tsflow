{
	"private": true,
	"name": "@lynxwall/cucumber-tsflow-workspace",
	"description": "Workspace for cucumber-tsflow",
	"author": "Lonnie Wall <lynxdev@lynxwall.com>",
	"version": "7.3.0",
	"license": "MIT",
	"workspaces": [
		"cucumber-tsflow",
		"cucumber-tsflow-specs/node",
		"cucumber-tsflow-specs/node-esm",
		"cucumber-tsflow-specs/node-exp",
		"cucumber-tsflow-specs/node-exp-esm",
		"cucumber-tsflow-specs/vue-exp-esm",
		"cucumber-tsflow-specs/vue",
		"cucumber-tsflow-specs/vue-esm",
		"cucumber-tsflow-specs/vue-exp"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/lynxwall/cucumber-js-tsflow.git"
	},
	"scripts": {
		"build": "yarn workspace @lynxwall/cucumber-tsflow build",
		"build:watch": "yarn workspace @lynxwall/cucumber-tsflow build:watch",
		"format": "prettier --write \"{cucumber-tsflow/src,cucumber-tsflow-specs/src}/**/*.{js,ts}\"",
		"lint": "eslint --fix --ext .js,.ts,.vue cucumber-tsflow/src",
		"test:all": "yarn test:cjs && yarn test:esm && yarn test:experimental",
		"test:cjs": "yarn test:cjs:vue && yarn test:cjs:node",
		"test:esm": "yarn test:esm:vue && yarn test:esm:node",
		"test:experimental": "yarn test:exp:vue && yarn test:exp:node",
		"test:cjs:vue": "yarn test:vue:cjs-esbuild && yarn test:vue:cjs-tsnode",
		"test:cjs:node": "yarn test:node:cjs-esbuild && yarn test:node:cjs-tsnode",
		"test:esm:vue": "yarn test:vue:esm-tsnode && yarn test:vue:esm-esbuild",
		"test:esm:node": "yarn test:node:esm-tsnode && yarn test:node:esm-esbuild",
		"test:exp:vue": "yarn test:vue:exp-esbuild && yarn test:vue:exp-tsnode && yarn test:vue:esm-exp-esbuild && yarn test:vue:esm-exp-tsnode",
		"test:exp:node": "yarn test:node:exp-esbuild && yarn test:node:exp-tsnode && yarn test:node:esm-exp-esbuild && yarn test:node:esm-exp-tsnode",
		"test:vue:cjs-esbuild": "yarn workspace cucumber-tsflow-vue test:esbuild",
		"test:vue:cjs-tsnode": "yarn workspace cucumber-tsflow-vue test:tsnode",
		"test:node:cjs-esbuild": "yarn workspace cucumber-tsflow-node test:esbuild",
		"test:node:cjs-tsnode": "yarn workspace cucumber-tsflow-node test:tsnode",
		"test:vue:esm-tsnode": "yarn workspace cucumber-tsflow-vue-esm test:vue-loader",
		"test:vue:esm-esbuild": "yarn workspace cucumber-tsflow-vue-esm test:esvue-loader",
		"test:node:esm-tsnode": "yarn workspace cucumber-tsflow-node-esm test:tsnode-loader",
		"test:node:esm-esbuild": "yarn workspace cucumber-tsflow-node-esm test:esnode-loader",
		"test:node:exp-esbuild": "yarn workspace cucumber-tsflow-node-exp test:esbuild",
		"test:node:exp-tsnode": "yarn workspace cucumber-tsflow-node-exp test:tsnode",
		"test:vue:exp-esbuild": "yarn workspace cucumber-tsflow-vue-exp test:esbuild",
		"test:vue:exp-tsnode": "yarn workspace cucumber-tsflow-vue-exp test:tsnode",
		"test:node:esm-exp-esbuild": "yarn workspace cucumber-tsflow-node-exp-esm test:esnode-loader",
		"test:node:esm-exp-tsnode": "yarn workspace cucumber-tsflow-node-exp-esm test:tsnode-loader",
		"test:vue:esm-exp-esbuild": "yarn workspace cucumber-tsflow-vue-exp-esm test:esvue-loader",
		"test:vue:esm-exp-tsnode": "yarn workspace cucumber-tsflow-vue-exp-esm test:vue-loader"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.23.0",
		"@jsdevtools/npm-publish": "~3.1.1",
		"@types/node": "~22.13.10",
		"@vue/eslint-config-typescript": "~14.5.0",
		"eslint": "~9.22.0",
		"eslint-config-prettier": "~10.1.1",
		"eslint-plugin-vue": "~10.0.0",
		"prettier": "~3.5.3",
		"ts-node": "~10.9.2",
		"typescript": "~5.8.2",
		"vue-eslint-parser": "10.1.1"
	},
	"packageManager": "yarn@3.5.0"
}
